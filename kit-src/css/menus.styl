.menu
.menu__item
	inline-block()
.menu__item > a


// HORIZONTAL
.menu--horizontal
	padding: 0
	margin: 0
.menu--horizontal .menu__item > a
	display: block;
	box-sizing: border-box
	padding: $rythm $rythm*4
	text-decoration: none
	
// Header Menu
.menu--header
	text-align: left
	
.menu--header .menu__item > a
	padding-bottom: $rythm - 2px
	border-bottom: 2px solid rgba(255,255,255,0)
	
.menu--header .menu__item:hover > a
.menu--header .menu__item.active > a
	border-bottom-color: rgba(255,255,255,1)

// Header Pop-Up Menu
.header__popup-menu
	inline-block()
	height: $rythm*6
	line-height: $rythm*6
	padding: 0
	
.header__popup-menu a
	cursor: pointer;
	color: #fff;