
.text
  &-center
    text-align: center
  &-left
    text-align: left
  &-right
    text-align: right
  &-justify
    text-align: justify

.float
  &-left
    float: left
  &-right
    float: right
  &-none
    float: none

.clearfix
  &::after
    content: "."
    display: table
    height: 0
    clear: both
    visibility: hidden

.hidden
  display: none

/* Paddings */
for i in range(1, 10, 1)
  .pad-{i*5}
    padding: 5px * i
