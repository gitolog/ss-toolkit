
.text
  &_center
    text-align: center
  &_left
    text-align: left
  &_right
    text-align: right
  &_justify
    text-align: justify

.float
  &_left
    float: left
  &_right
    float: right
  &_none
    float: none

.clearfix
  &::after
    content: "."
    display: table
    height: 0
    clear: both
    visibility: hidden

.hidden
  display: none

/* Paddings */
for i in range(1, 10, 1)
  .pad-{i*5}
    padding: 5px * i
