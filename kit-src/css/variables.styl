/***********************************************************************/
/*                              FONTS                                  */
/***********************************************************************/
$font-family = Roboto, Arial, sans-serif

$font = {
  size : {
    text : 14px,   // Main
    small : 0.8em, // Small text
    large : 1.2em  // Large text
    zero : 0px  // Zero text
  }
}

/***********************************************************************/
/*                              COLORS                                 */
/***********************************************************************/
/*------------------------- Text colors -------------------------------*/
$color = {  // Text colors
  text : {
    main : gray,     // main text
    light : silver,  // light text
    dark : black,    // dark text
  }
}
/*------------------------- Header colors -----------------------------*/
$color = merge($color,{
  header : {
    main : $color.text.main,    // Main header color
    light : $color.text.light,  // Light header color
    dark : $color.text.dark,    // Dark header color
  }
});
/*------------------------- Background colors -------------------------*/
$color = merge($color,{
  bg : {
    main : '',// основной фон
    light : '',// светлый фон
    dark : '',// темный фон
    accent : #ff4081
  }
});
/*------------------------- Link colors -------------------------------*/
$color = merge($color,{
  link : {
    main : blue,            // Normal link color
    main-hover : violet,      // Normal hovered link color
    light : '',           // Light link color
    light-hover : '',     // Light hovered link hover
    dark : '',           // Light link color
    dark-hover : '',     // Light hovered link hover
    accent : #ff4081,     // Accented link color
    accent-hover : '',    // Accented hovered link hover
  }
});


/***********************************************************************/
/*                              BORDERS                                */
/***********************************************************************/
$border = {
  style : {
    main : solid,  // основной стиль бордера
    alter : dotted // альтернативный стиль бордера
  },
  color : {
    main : '',  // обводка
    light : '', // обводка светлая
    dark : ''   // обводка темная
  },
  width : {
    main : 1px, // основной
    alter : 2px // альтернативный
  }
}


/***********************************************************************/
/*                              INDENTS                                */
/***********************************************************************/
// отступы (влияют и на padding и на margin)
$rythm = {
	single: 5px
}
$rythm.double = $rythm.single*2
$rythm.triple = $rythm.single*3
$rythm.quadro = $rythm.single*4
$rythm.penta = $rythm.single*5
$rythm.hexa = $rythm.single*6

$indent = {
  main : $rythm.quadro, // основной
  alter : $rythm.double // альтернативный
}