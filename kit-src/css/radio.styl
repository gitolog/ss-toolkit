.radio
  position: relative
  font-size: 16px
  line-height: 24px
  display: inline-block
  box-sizing: border-box
  margin: 0
  padding-left: 0
.radio.is-upgraded
  padding-left: 24px

.radio__button
  line-height: 24px
.radio.is-upgraded .radio__button
  position: absolute
  width: 0
  height: 0
  margin: 0
  padding: 0
  opacity: 0
  -ms-appearance: none
  -moz-appearance: none
  -webkit-appearance: none
  appearance: none
  border: none

.radio__outer-circle
  position: absolute
  top: 4px
  left: 0
  display: inline-block
  box-sizing: border-box
  width: 16px
  height: 16px
  margin: 0
  cursor: pointer
  border: 2px solid rgba(0,0,0, 0.54)
  border-radius: 50%
  z-index: 2
.radio.is-checked .radio__outer-circle
  border: 2px solid rgb(63,81,181)
.radio.is-disabled .radio__outer-circle
  border: 2px solid rgba(0,0,0, 0.26)
  cursor: auto

.radio__inner-circle
  position: absolute
  z-index: 1
  margin: 0
  top: 8px
  left: 4px
  box-sizing: border-box
  width: 8px
  height: 8px
  cursor: pointer
  -webkit-transition-duration: 0.28s
  transition-duration: 0.28s
  -webkit-transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1)
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1)
  -webkit-transition-property: -webkit-transform
  transition-property: transform
  -webkit-transform: scale3d(0, 0, 0)
  transform: scale3d(0, 0, 0)
  border-radius: 50%
  background: rgb(63,81,181)
.radio.is-checked .radio__inner-circle
  -webkit-transform: scale3d(1, 1, 1)
  transform: scale3d(1, 1, 1)
.radio.is-disabled .radio__inner-circle
  background: rgba(0,0,0, 0.26)
  cursor: auto
.radio.is-focused .radio__inner-circle
  box-shadow: 0 0 0px 10px rgba(0, 0, 0, 0.1)

.radio__label
  cursor: pointer
.radio.is-disabled .radio__label
  color: rgba(0,0,0, 0.26)
  cursor: auto

.radio__ripple-container
  position: absolute
  z-index: 2
  top: -9px
  left: -13px
  box-sizing: border-box
  width: 42px
  height: 42px
  border-radius: 50%
  cursor: pointer
  overflow: hidden
  -webkit-mask-image: -webkit-radial-gradient(circle, white, black)
.radio__ripple-container .ripple
  background: rgb(63,81,181)
.radio.is-disabled .radio__ripple-container
  cursor: auto
.radio.is-disabled .radio__ripple-container .ripple
  background: transparent
